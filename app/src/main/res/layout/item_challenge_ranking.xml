<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/px_10"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_challenge_rank_user_name"
        android:text="你知道"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:textSize="9sp"
        android:ellipsize="end"
        android:layout_below="@+id/iv_item_challenge_rank_user_photo"
        android:layout_width="30dp"
        android:layout_height="10dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/back_item_challenge_rank"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_challenge_rank_user_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        fresco:placeholderImage="@drawable/iocn_login_logo"
        fresco:actualImageScaleType="fitCenter"
        fresco:failureImage="@drawable/iocn_login_logo"
        fresco:failureImageScaleType="centerInside"
        fresco:roundedCornerRadius="10dp"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="false"
        fresco:roundAsCircle="true"
        />


</RelativeLayout>