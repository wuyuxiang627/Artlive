<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_item_soundtrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_item_photo"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_cd"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:onClick="doclick"
                android:layout_alignLeft="@+id/rl_item_soundtrack_cover"
                />
            <RelativeLayout
                android:id="@+id/rl_item_soundtrack_cover"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/iv_item_soundtrack_cover"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/icon_user_photo"
                    />
                <RadioButton
                    android:id="@+id/rb_item_soundtrack_start_stop"
                    android:layout_width="18dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/icon_soundtrack_start"/>
            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_item_soundtrack_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_item_photo"
            android:layout_toEndOf="@+id/rl_item_photo"
            android:text="@string/video_short_features_soundtrack_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/find_title" />
        <TextView
            android:id="@+id/tv_item_soundtrack_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rl_item_photo"
            android:text="@string/video_short_features_soundtrack_author"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_below="@+id/tv_item_soundtrack_text"
            android:textColor="@color/find_msg" />
        <TextView
            android:id="@+id/tv_item_soundtrack_author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_item_soundtrack_author"
            android:layout_below="@+id/tv_item_soundtrack_text"
            android:textColor="@color/find_msg" />

        <Button
            android:id="@+id/btn_item_soundtrack_author_ok"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:visibility="gone"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/rl_item_photo"
            android:background="@drawable/btn_orange_twenty_one"
            android:layout_marginBottom="5dp"
            android:text="@string/video_short_features_soundtrack_ok"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_item_soundtrack"
        android:background="@color/view"/>






</RelativeLayout>