<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_follow_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        fresco:actualImageScaleType="fitCenter"
        fresco:failureImage="@drawable/icon_test_user_photo"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/icon_test_user_photo"
        fresco:roundAsCircle="true"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="false"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundedCornerRadius="10dp" />


    <TextView
        android:id="@+id/tv_item_follow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_follow_photo"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_item_follow_photo"
        android:text="欣欣"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_item_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_follow_name"
        android:layout_below="@+id/tv_item_follow_name"
        android:layout_marginTop="12dp"
        android:text="粉丝数: 42313"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_item_my_follow"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="12dp"
        android:text="取消关注"
        android:textColor="#ff000000"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/iv_item_my_follow"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_alignTop="@+id/tv_item_my_follow"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_item_my_follow"
        android:background="@drawable/icon_phonetic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/iv_item_search_recommend_name"
        android:layout_alignParentBottom="true"
        android:background="@color/view" />

</RelativeLayout>



