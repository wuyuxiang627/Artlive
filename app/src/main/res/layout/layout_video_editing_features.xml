<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_layout_video_editing_finish"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_left_finish"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="34dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:id="@+id/rl_layout_editing_features_tuning"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/shape_features_music">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_video_edit_tuning"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_editing_features_tuning"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_layout_video_editing_features_sticker"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/shape_features_music">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/icon_video_edit_sticker"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_editing_features_sticker"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_layout_video_editing_features_special_effects"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/shape_features_music">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/icon_video_edit_special_effects"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_editing_features_special_effects"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_height="173dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="101dp"
            android:layout_height="173dp"
            android:id="@+id/iv_layout_video_edit_cover" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/iv_layout_video_edit_cover"
            android:gravity="center"
            android:background="@color/text_color_30"
            android:text="@string/video_editing_features_change_cover"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_layout_edit_features_title"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:hint="@string/video_editing_features_hint_title"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/iv_layout_video_edit_cover" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rllllllllllll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="91dp"
        android:layout_marginStart="12dp">

        <ImageButton
            android:id="@+id/ib_layout_video_edit_QQ"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/icon_qq" />

        <ImageButton
            android:id="@+id/ib_layout_video_edit_wechat"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/ib_layout_video_edit_QQ"
            android:background="@drawable/icon_wechat_friend" />

        <ImageButton
            android:id="@+id/ib_layout_video_edit_wechat_friend"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/ib_layout_video_edit_webo"
            android:background="@drawable/icon_wechat" />

        <ImageButton
            android:id="@+id/ib_layout_video_edit_webo"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/ib_layout_video_edit_wechat"
            android:background="@drawable/icon_weibo" />

        <ImageView
            android:id="@+id/iv_layhout_video_edit_save_loca"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_layhout_video_edit_save_loca"
            android:layout_marginRight="3dp"
            android:background="@drawable/icon_video_edit_no_ok"/>

        <TextView
            android:id="@+id/tv_layhout_video_edit_save_loca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="@string/video_editing_features_save_local"/>

    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_gray_twenty_one"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="11dp"
            android:text="@string/video_editing_features_save_draft"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_layout_edit_video_release"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/btn_orange_twenty_one"
            android:text="@string/video_editing_features_release"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_weight="1"/>
        
    </LinearLayout>










</RelativeLayout>