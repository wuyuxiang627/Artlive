<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <!--救援页面-->

    <RadioButton
        android:id="@+id/rb_challenge_resue_results_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_centerHorizontal="true"
        android:drawablePadding="@dimen/px_4"
        android:textSize="21sp"
        android:drawableRight="@drawable/icon_challenge_jiuyuanchenggong"
        android:drawableLeft="@drawable/icon_challenge_hongxin"/>


    <LinearLayout
        android:id="@+id/ll_challenge_resue_results_number"
        android:layout_below="@+id/rb_challenge_resue_results_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="总共收到  "
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_challenge_resue_results_number_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jyp_1" />

        <ImageView
            android:id="@+id/iv_challenge_resue_results_number_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_9"
            android:layout_toRightOf="@+id/iv_challenge_resue_results_number_one"
            android:background="@drawable/jyp_2" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_challenge_resue_results_number_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_9"
            android:layout_toRightOf="@+id/iv_challenge_resue_results_number_two"
            android:background="@drawable/jyp_2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="   张救援票"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_18"
        android:layout_below="@+id/ll_challenge_resue_results_number"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_challenge_meddle_success_btn"
        android:text="@string/challenge_meddle_grade_success_start"
        android:textColor="@color/white"
        android:textSize="12sp" />
    









</RelativeLayout>