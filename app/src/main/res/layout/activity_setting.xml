<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view">

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_setting_title"
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <RelativeLayout
            android:id="@+id/rl_setting_finish"
            android:background="?attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_left_finish"
                android:layout_marginLeft="10dp"
                />


        </RelativeLayout>
        <TextView
            android:id="@+id/tv_setting_title"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/setting_title"
            android:textColor="@color/find_title"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="18sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view"
            android:id="@+id/view" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_setting_title"
        android:layout_height="match_parent">
        
    
    <LinearLayout
        android:background="@color/white"
        android:layout_below="@+id/rl_setting_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_setting_account_seccurity"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_setting_account_seccurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/iv_find_news_img"
                android:text="@string/setting_account_seccurity"
                android:textColor="@color/find_title"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_setting_account_seccurity"
                android:background="@color/view" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_setting_sweep"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_setting_sweep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/iv_find_news_img"
                android:text="@string/setting_sweep"
                android:textColor="@color/find_title"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow" />

        </RelativeLayout>

        <include
            android:id="@+id/il_setting"
            layout="@layout/layout_setting"/>

        <include layout="@layout/layout_setting_us"/>
        <Button
            android:id="@+id/btn_user_out"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/setting_user_out"
            android:textSize="15sp"
            android:textColor="@color/find_title"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="60dp"
            />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</RelativeLayout>