<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_media_preview_user"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="17dp"
        android:background="@drawable/back_video_short_tag"
        android:layout_height="38dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_video_play_user_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            fresco:placeholderImage="@drawable/iocn_login_logo"
            fresco:actualImageScaleType="fitCenter"
            
            fresco:failureImage="@drawable/iocn_login_logo"
            fresco:failureImageScaleType="centerInside"
            fresco:roundedCornerRadius="10dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="false"
            fresco:roundAsCircle="true"
            />

        <TextView
            android:id="@+id/tv_video_play_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小奶瓶"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_video_play_user_photo"
            android:layout_marginLeft="3dp" />

        <ImageButton
            android:id="@+id/ib_play_video_follow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/icon_media_preview_attention"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/tv_video_play_user_name"
            android:layout_marginLeft="6dp"/>

    </RelativeLayout>





    <ImageButton
        android:id="@+id/iv_video_play_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/icon_finish"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/rl_video_play_talk"
        android:layout_alignStart="@+id/rl_video_play_talk"
        android:background="@drawable/back_black_80">


        <TextView
            android:id="@+id/tv_ll_play_video_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="# 一起萌萌哒"
            android:textColor="#fff"
            android:textSize="12sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="11dp"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/rl_video_play_talk">

        <RelativeLayout
            android:background="@drawable/back_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:background="@drawable/icon_play_video_comment"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView2"
                android:gravity="center_vertical"
                android:textColor="#FF7602"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="评论"
                android:textSize="12sp" />

        </RelativeLayout>




    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_video_play_like"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/ll_ll_video_play_setting"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="11dp"
        android:background="@drawable/back_white">

        <ImageView

            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/icon_play_video_like_no"
            android:id="@+id/iv_play_video_like" />

        <TextView
            android:id="@+id/tv_video_play_like_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_play_video_like"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="123546"
            android:textSize="12sp" />

    </RelativeLayout>
    
    
    

    <LinearLayout
        android:id="@+id/ll_ll_video_play_setting"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_height="27dp">

        <RelativeLayout
            android:layout_marginRight="11dp"
            android:layout_width="27dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@drawable/back_white"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_play_video_share"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="11dp"
            android:layout_width="27dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@drawable/back_white"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_play_video_report"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="27dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@drawable/back_white"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_play_video_download"/>


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>