<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back_division">
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_mind_title"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_mind_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_mind_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_setting"
            android:background="?attr/selectableItemBackground"
             />

    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_mind_title"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:id="@+id/rl_mind_user_photo"
                android:layout_width="match_parent"
                android:layout_height="106dp">

                <!--<ImageView-->
                    <!--android:id="@+id/iv_mind_user_photo"-->
                    <!--android:layout_width="62dp"-->
                    <!--android:layout_height="62dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="17dp"-->
                    <!--android:src="@drawable/iocn_login_logo"-->
                    <!--/>-->


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_mind_user_photo"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    fresco:placeholderImage="@drawable/iocn_login_logo"
                    fresco:actualImageScaleType="fitCenter"
                    fresco:failureImage="@drawable/iocn_login_logo"
                    fresco:failureImageScaleType="centerInside"
                    fresco:roundedCornerRadius="10dp"
                    fresco:roundTopLeft="true"
                    fresco:roundTopRight="true"
                    fresco:roundBottomLeft="false"
                    fresco:roundBottomRight="false"
                    fresco:roundAsCircle="true"
                    />


                <TextView
                    android:id="@+id/tv_mind_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未登录"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="27dp"
                    android:layout_toRightOf="@+id/iv_mind_user_photo"
                    android:layout_marginLeft="11dp"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:background="@drawable/icon_right_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view"
                    />
            </RelativeLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/rl_mind_user_follow"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_mind_user_follow_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_below="@+id/tv_mind_user_follow_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_70"
                        android:gravity="center_horizontal"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mind_user_fans"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_mind_user_fans_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_below="@+id/tv_mind_user_fans_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_70"
                        android:gravity="center_horizontal"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:layout_alignParentLeft="true"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_mind_user_dynamic"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_mind_user_dynamic_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_below="@+id/tv_mind_user_dynamic_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="动态"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_70"
                        android:gravity="center_horizontal"
                        />
                </RelativeLayout>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/view"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:visibility="gone"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_mind_task"
                    android:orientation="vertical"
                    android:layout_width="57dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:background="@drawable/icon_mind_task"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="23dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务"
                        android:textSize="11sp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view"
                    android:layout_toRightOf="@+id/ll_mind_task"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="7dp"
                    />

                <RelativeLayout
                    android:layout_width="63dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="7dp"
                        />
                    <ImageView
                        android:id="@+id/iv_mind_user_shop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/icon_mind_shop"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="7dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="57dp"
                    android:layout_marginRight="63dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刷坦克才是狂"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="10dp"
                        />

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="42dp"
                        android:backgroundTint="@color/black"
                        />

                    <RelativeLayout
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="18dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/icon_mind_diamonds"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:background="@color/back_division"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="360dp">
                <LinearLayout
                    android:layout_marginBottom="1dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    >
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/iv_mind_channel"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="31dp"
                            android:background="@drawable/icon_mind_channel"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的频道"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:layout_below="@+id/iv_mind_channel"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/view"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_mind_my_chat"
                        android:layout_width="0dp"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_mind_chat"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="31dp"
                            android:background="@drawable/icon_mind_chat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_mind_chat"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:text=" 我的聊天"
                            android:textColor="@color/black" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/view" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/rl_mind_user_privilege"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/iv_mind_privilege"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="31dp"
                            android:background="@drawable/icon_mind_privilege"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 特权中心"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:layout_below="@+id/iv_mind_privilege"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/view" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/rl_mind__wallet"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/iv_mind__wallet"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="31dp"
                            android:background="@drawable/icon_mind_wallet"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的钱包"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:layout_below="@+id/iv_mind__wallet"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/view"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="1dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    >
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/iv_mind__sign_channe"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="31dp"
                            android:background="@drawable/icon_mind_sign_channe"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签约频道"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:layout_below="@+id/iv_mind__sign_channe"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/view"
                            android:layout_alignParentRight="true"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/rl_mind_user_video"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/iv_mind__video"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="31dp"
                            android:background="@drawable/iocn_mind_video"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的小视频"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:layout_below="@+id/iv_mind__video"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/view" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/rl_mind_user_help"
                        >
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/view" />

                        <ImageView
                            android:id="@+id/iv_mind_help"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="31dp"
                            android:background="@drawable/icon_mind_help"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="帮助和反馈"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:layout_below="@+id/iv_mind_help"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/view"
                            android:layout_alignParentBottom="true"
                            />
                        <ImageView
                            android:id="@+id/iv_mind__game"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="31dp"
                            android:background="@drawable/icon_mind_game"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游戏广场"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:layout_below="@+id/iv_mind__game"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/view"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/view"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>