<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_hot_cover"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        fresco:placeholderImage="@drawable/icon_cover_lodding"
        fresco:actualImageScaleType="fitCenter"
        fresco:failureImage="@drawable/icon_cover_lodding"
        fresco:failureImageScaleType="centerInside"
        android:scaleType="fitXY"
        fresco:roundedCornerRadius="10dp"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"/>
    <ImageView
        android:id="@+id/iv_item_gender"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/icon_man"
        android:layout_alignBottom="@+id/iv_item_hot_cover"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="7dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23.8万"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/iv_item_gender"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="4dp"
        android:layout_alignBottom="@+id/iv_item_hot_cover"
        />
    <TextView
        android:id="@+id/tv_item_hot_user_name"
        android:layout_below="@+id/iv_item_hot_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/find_msg"/>

</RelativeLayout>