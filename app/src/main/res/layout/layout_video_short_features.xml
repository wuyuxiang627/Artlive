<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:layout_height="match_parent">

    
    <com.connxun.elinetv.util.SteppingProgressBar
        android:id="@+id/pb_layout_video_short_schedule"
        android:layout_width="match_parent"
        android:layout_height="14dp" />
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">
        <ImageView
            android:id="@+id/iv_layout_video_short_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_finish"/>
        
        <ImageView
            android:id="@+id/iv_layout_video_short_camera_conversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_live_camera_conversion"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="22dp"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_layout_video_time"
            android:background="@drawable/icon_time"
            android:layout_toLeftOf="@+id/iv_layout_video_short_camera_conversion"
            android:layout_centerVertical="true"
            android:layout_marginRight="43dp"
            android:layout_width="14dp"
            android:layout_height="17dp"
            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_layout_video_photo"
            android:background="@drawable/icon_album"
            android:layout_toLeftOf="@+id/iv_layout_video_time"
            android:layout_centerVertical="true"
            android:layout_marginRight="43dp"
            android:layout_width="20dp"
            android:layout_height="18dp"
            />
        
    </RelativeLayout>
    
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="34dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:id="@+id/rl_layout_video_short_beauty"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/shape_features_music">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/icon_beauty"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_short_features_beauty"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_layout_video_short_expression"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/shape_features_music">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/icon_expression"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_short_features_expression"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_layout_video_short_soundtrack"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/shape_features_music">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/icon_soundtrack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_short_features_music"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
            
        </RelativeLayout>
        
        
    </LinearLayout>
    
    <RadioGroup
        android:id="@+id/rg_video_short_ffeatures_speed"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <RadioButton
            android:id="@+id/rb_video_short_features_very_slow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/video_short_features_very_slow"
            android:textColor="@color/radiobutton_color"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/shape_features_tag_left"
            />
        <RadioButton
            android:id="@+id/rb_video_short_features_slow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/video_short_features_slow"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/radiobutton_color"
            android:background="@drawable/shape_features_tag"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/video_short_features_standard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/video_short_features_standard"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/radiobutton_color"
            android:background="@drawable/shape_features_tag"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/video_short_features_fast"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/video_short_features_fast"
            android:textColor="@color/radiobutton_color"
            android:background="@drawable/shape_features_tag"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/video_short_features_very_fast"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/video_short_features_very_fast"
            android:textColor="@color/radiobutton_color"
            android:background="@drawable/shape_features_tag_reight"
            android:button="@null"/>

    </RadioGroup>

    <RelativeLayout
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_video_short_features_start_stop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:text="@string/video_short_features_start"
                android:background="@drawable/shape_features_music"/>

        <ImageView
            android:id="@+id/iv_video_short_features_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/btn_video_short_features_start_stop"
            android:layout_marginRight="63dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/icon_back"/>

        <ImageView
            android:id="@+id/iv_video_short_features_ok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="64dp"
            android:visibility="gone"
            android:layout_toEndOf="@+id/btn_video_short_features_start_stop"
            android:background="@drawable/icon_ok" />


    </RelativeLayout>


</RelativeLayout>