<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="70dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@mipmap/gift0"/>-->
    
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_gift_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        fresco:placeholderImage="@drawable/icon_cover_lodding"
        fresco:actualImageScaleType="fitCenter"
        fresco:failureImage="@drawable/icon_cover_lodding"
        fresco:failureImageScaleType="centerInside"/>


    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玫瑰花"
        android:textSize="8sp"
        android:textColor="@color/find_title"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_gift_img"
        />
    

    <TextView
        android:id="@+id/tv_gift_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gift_name"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="520"
        android:textColor="@color/check_true"
        android:textSize="7sp" />
</RelativeLayout>