<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/llll"
    android:paddingTop="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_beauty_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/seek_bar" />
    <include
        android:id="@id/seek_bar"
        layout="@layout/seek_bar_whitening_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/seek_face_lift"/>

    <include
        android:id="@id/seek_face_lift"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        layout="@layout/seek_bar_face_life_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/rl_layout_beauty_list"/>

    <RelativeLayout
        android:id="@+id/rl_layout_beauty_list"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/color_4B4B4B"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_beauty_tag"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_beauty_type"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>





</RelativeLayout>