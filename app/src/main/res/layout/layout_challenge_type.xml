<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/layout_challenge_type_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/px_12"
        android:layout_marginLeft="@dimen/px_12"
        android:layout_marginTop="@dimen/px_150"
        android:layout_marginBottom="@dimen/px_150"/>


    <!--二级页面-->
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/layout_challenge_type_two_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!--三级文本页面-->
    <FrameLayout
        android:id="@+id/layout_challenge_type_three_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--三级伴奏页面-->
    <FrameLayout
        android:id="@+id/layout_challenge_type_three_music_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</RelativeLayout>