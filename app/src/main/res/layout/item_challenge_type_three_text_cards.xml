<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#ff7602"
    android:id="@+id/item_challenge_type_three_text_card"
    android:clickable="true"
    android:layout_marginBottom="10dp"
    android:background="#ff7602"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_challenge_type_three_text_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="翻唱"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/px_12"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/px_12"
                android:layout_below="@+id/item_challenge_type_three_text_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_challenge_type_three_text_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_12"
                    android:background="@color/white"
                    android:paddingRight="6dp"
                    android:paddingTop="12dp"
                    android:paddingLeft="6dp"
                    android:paddingBottom="11dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="你和朋友或其他人约好了在某地见面，可他却迟迟不来，你开始不耐烦，不停催他快来，然后然后然后然后然后然后..."/>
            </RelativeLayout>

        </RelativeLayout>

</android.support.v7.widget.CardView>