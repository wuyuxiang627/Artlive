<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <TextView
        android:id="@+id/tv_item_my_purse_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_find_news_img"
        android:text=" 0 金币"
        android:layout_centerVertical="true"
        android:textColor="@color/find_title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_my_purse_bold_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送 6 金币"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:layout_marginLeft="6dp"
        android:textColor="@color/actionsheet_gray"
        android:layout_toRightOf="@+id/tv_item_my_purse_bold"
        />


    <Button
        android:id="@+id/btn_item_my_purse_buy_one"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/theme_color"
        android:layout_margin="5dp"
        android:text="@string/my_mpurse_buy"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>