<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_white_radius_10">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_item_vidoe_universal_video_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            fresco:placeholderImage="@drawable/icon_cover_lodding"
            fresco:actualImageScaleType="fitCenter"
            fresco:failureImage="@drawable/icon_cover_lodding"
            fresco:failureImageScaleType="centerInside"
            fresco:roundedCornerRadius="10dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="false"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp">

            <!--<ImageView-->
                <!--android:id="@+id/iv_item_video_universal_user_photo"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:background="@drawable/icon_test_user_photo" />-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_item_video_universal_user_photo"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                fresco:placeholderImage="@drawable/icon_test_user_photo"
                fresco:actualImageScaleType="fitCenter"
                fresco:failureImage="@drawable/icon_test_user_photo"
                fresco:failureImageScaleType="centerInside"
                fresco:roundedCornerRadius="10dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundBottomLeft="false"
                fresco:roundBottomRight="false"
                fresco:roundAsCircle="true"
                />

            <TextView
                android:id="@+id/tv_item_video_universal_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_item_video_universal_user_photo"
                android:text="@string/video_editing_features_release"
                android:textColor="@color/find_msg"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_item_video_universal_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:text="0"
                android:textColor="@color/text_color_confirm" />

            <ImageView
                android:id="@+id/iv_item_video_universal_like"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@+id/tv_item_video_universal_like_number"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@+id/tv_item_video_universal_like_number"
                android:background="@drawable/icon_like" />


        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>