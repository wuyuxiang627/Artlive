<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="3dp"
    android:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_hot_anchor_cover"
        android:layout_width="125dp"
        android:layout_height="125dp"
        fresco:placeholderImage="@drawable/icon_cover_lodding"
        fresco:actualImageScaleType="fitCenter"
        fresco:failureImage="@drawable/icon_cover_lodding"
        fresco:failureImageScaleType="centerInside"
        android:scaleType="fitXY"
        fresco:roundedCornerRadius="10dp"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true" />


    <TextView
        android:id="@+id/tv_item_hot_anchor_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_item_hot_anchor_cover"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/find_msg"
        android:textSize="12sp" />


</RelativeLayout>