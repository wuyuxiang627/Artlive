<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_my_information"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/rl_my_information_return"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="616dp"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/icon_left_finish" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_fans_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="617dp"
            android:layout_marginTop="12dp"
            android:text="@string/my_information_title"
            android:textColor="@color/find_title"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_media_share"
            android:layout_width="19dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="43dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_media_share" />

        <ImageView
            android:id="@+id/iv_information_editor"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/wdzl_bianji" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@mipmap/zl_beijing">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_information"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            fresco:placeholderImage="@drawable/iocn_login_logo"
            fresco:actualImageScaleType="fitCenter"
            fresco:failureImage="@drawable/iocn_login_logo"
            fresco:failureImageScaleType="centerInside"
            fresco:roundedCornerRadius="10dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="false"
            fresco:roundAsCircle="true"/>
        <!--<ImageView-->
            <!--android:id="@+id/iv_my_information_avatar"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:src="@mipmap/wode_tuxiang" />-->

        <ImageView
            android:id="@+id/dddd"
            android:src="@mipmap/wszl_tianjia"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="18dp" />

        <ImageView
            android:id="@+id/eeee"
            android:src="@mipmap/wszl_tianjia"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/tv_my_information_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="71dp"
            android:text="用户名"
            android:textColor="#ff000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_my_information_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="94dp"
            android:text="1关注"
            android:textColor="#ff000000"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/gggg"
            android:layout_width="9dp"
            android:layout_height="11dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="72dp"
            android:src="@mipmap/icon_wuman" />

        <TextView
            android:id="@+id/tv_my_information_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_my_information_name"
            android:layout_alignBottom="@+id/tv_my_information_name"
            android:layout_alignStart="@+id/dddd"
            android:text="18岁"
            android:textColor="#ff000000"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="12dp"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="72dp"
            android:src="@mipmap/wdzl_dengji" />

        <TextView
            android:id="@+id/my_information_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="94dp"
            android:text="1粉丝"
            android:textColor="#ff000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_autograph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="109dp"
            android:layout_marginTop="94dp"
            android:text="个人说明"
            android:textColor="#ff000000"
            android:textSize="12dp" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_Myinformation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>

