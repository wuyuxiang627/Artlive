<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_setting_title"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <RelativeLayout
            android:id="@+id/rl_illegal_complaint"
            android:background="?attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_left_finish"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/setting_illegal_complaint"
            android:textColor="@color/find_title"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="18sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view"
             />
    </RelativeLayout>

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:layout_width="375dp"
        android:layout_height="40dp">

        <EditText
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请填写联系手机 (必填)"
            android:textColor="#ff333333"
            android:textSize="12dp"
            android:layout_marginLeft="12dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="#ffe8e8e8" />

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:layout_width="375dp"
        android:layout_height="149dp">

        <EditText
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="top"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请填写申诉理由:"
            android:textColor="#ff333333"
            android:textSize="12dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="#ffe8e8e8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_complaint"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/btn_gray_twenty_one"
            android:text="提交申诉申请"
            android:textSize="15sp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="73dp"
            android:textColor="@color/text_color_confirm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="131dp"
            android:text="您也可以拨打电话进行申诉：1234565"
            android:textColor="#ff000000"
            android:textSize="9dp" />


    </RelativeLayout>

</LinearLayout>
